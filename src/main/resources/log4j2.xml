<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <!-- Appenders section -->
    <Appenders>
        <!-- File appender -->
        <File name="file" fileName="railwaylog.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m %ex%n</Pattern>
            </PatternLayout>
        </File>

    </Appenders>
    <!-- Loggers section -->
    <Loggers>
        <!-- Root logger -->
        <Root level="trace">
            <AppenderRef ref="file" level="DEBUG"/>
        </Root>


    </Loggers>
</Configuration>