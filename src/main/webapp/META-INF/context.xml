<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/railwaym">

  <!-- ConnectionPool Resource for MySQL db  -->
  <Resource auth="Container"
            connectionProperties="useUnicode=yes;characterEncoding=utf8;" 
            driverClassName="com.mysql.jdbc.Driver" 
            maxActive="4" maxIdle="2" maxWait="100" 
            name="jdbc/railway" 
            password="" 
            type="javax.sql.DataSource" 
            url="jdbc:mysql://localhost:3306/railway" username="root"/>


  <Transaction
          factory="org.objectweb.jotm.UserTransactionFactory"
          jotm.timeout="60"/>

</Context>
